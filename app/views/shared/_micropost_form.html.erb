<%= form_for @micropost, :remote => :true do |f| %>
  <%= render 'shared/error_msg', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" , :method => :post  %>
<% end %>

